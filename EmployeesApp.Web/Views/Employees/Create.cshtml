@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EmployeesApp.Web.Models.Employee
<!DOCTYPE html>
<html>
<head>
    <title>New Employee</title>
    <link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@@latest/css/pico.classless.min.css">
</head>
<body>
    <h2>New Employee</h2>
    <form asp-controller="employee" asp-action="create">
        <label asp-for="Name">Employee name</label>
        <input asp-for="Name" required minlength="2" />
        <label asp-for="Email">Employee Email</label>
        <input asp-for="Email" required minlength ="2"/>
        <input type="submit" value="Create" />
    </form>
   
    <div asp-validation-summary="All"></div>
    
</body>
</html>